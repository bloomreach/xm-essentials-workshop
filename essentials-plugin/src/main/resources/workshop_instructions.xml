<?xml version="1.0" encoding="UTF-8"?>

<instructions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.onehippo.org/essentials/instructions/instructions.xsd" xmlns="http://www.onehippo.org/essentials/instructions">

  <!--
     The examples below use property placeholders, with double {{curly-braces}} around it.
     For a complete list, see org.onehippo.cms7.essentials.sdk.api.service.PlaceholderService

     Note: the files mentioned in the source attributes below do not exist in this project. The instructions are added
     as examples for how to write instructions.
  -->

  <instructionSet>
    <!-- TASK 1: add a Maven dependency to cms/pom.xml -->
    <mavenDependency targetPom="cms" groupId="org.jsoup" artifactId="jsoup" version="1.11.3"/>

    <!-- TASK 2: copy an FTL template into the project’s webfiles -->
    <freemarker action="copy" source="workshop-template.ftl" target="{{webfilesRoot}}/freemarker/{{namespace}}/workshop-template.ftl"/>

    <!-- TASK 3: import XML HST configuration for that template into the repository -->
    <xml action="copy" source="workshop-template.xml" target="{{hstRoot}}/hst:configurations/{{namespace}}/hst:templates"/>

    <!-- TASK 4: copy an image into the site’s WEB-INF folder, avoid that Essentials attempts to replace placeholders -->
    <file action="copy" binary="true" source="matterhorn.jpg" target="{{freemarkerRoot}}/images/matterhorn.jpg"/>

    <execute class="org.example.ExampleInstruction"/>
  </instructionSet>

  <!-- This instruction set is only executed if your Essentials settings specify that sample data should be installed. -->
  <instructionSet group="sampleData">
    <!-- TASK 5: copy a folder as ‘development’ sample data into your project -->
    <file action="copy" source="sample-data-folder.yaml"
              target="{{developmentContent}}/essentials/workshop/sample-data-folder.yaml"/>
  </instructionSet>

</instructions>